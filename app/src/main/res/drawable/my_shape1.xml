<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"
                android:bottom="4dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/white">
            </stroke>
            <corners
                android:radius="10dp">
            </corners>
        </shape>

    </item>

</layer-list>